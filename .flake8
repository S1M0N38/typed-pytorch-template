[flake8]
select = C,E,F,W,B
ignore = E128,E203,E501,W503
per-file-ignores =
	base/__init__.py:F401,F403
	data_loader/__init__.py:F401,F403
	logger/__init__.py:F401,F403
	model/__init__.py:F401,F403
	trainer/__init__.py:F401,F403
	utils/__init__.py:F401,F403
extend-exclude = .venv*
count = True
max-complexity = 25
max-line-length = 90
format=%(code)s %(path)s (%(row)d:%(col)d): %(text)s
statistics = True
