[flake8]
select = C,E,F,W,B
ignore = E128,E203,E501,W503
per-file-ignores =
	# module/object imported but unused
	base/__init__.py:F401
	logger/__init__.py:F401
	trainer/__init__.py:F401
	utils/__init__.py:F401,F403
extend-exclude = .venv*
count = True
max-complexity = 25
max-line-length = 90
format=%(code)s %(path)s (%(row)d:%(col)d): %(text)s
statistics = True